#ifndef INC_OP_H_
#define INC_OP_H_
#include "main.h"

static constexpr  uint32_t OP_50MHZ =3;
static constexpr  uint32_t BIT_per_PIN =4;
static constexpr  uint32_t BIT_per_REG =32;
static constexpr  uint32_t PIN_per_REG =8;

class OP
{
public:
	OP(GPIO_TypeDef * GPIO, uint8_t pin);
	void ON();
	void OFF();
	void TOGGLE();
	~OP();


private:
	GPIO_TypeDef * PORT_;
	uint8_t Pin_;
	/*inline*/ static uint8_t COUNT;
};





#endif /* INC_OP_HPP_ */
